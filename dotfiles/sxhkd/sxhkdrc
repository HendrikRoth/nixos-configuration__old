#
# wm independent hotkeys
#

# program launcher
super + @space
	rofi -show run -hide-scrollbar -width 25 -lines 1 -columns 2 -seperator-style solid -yoffset 30 -location 2

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + r
	bspc wm -r

# close and kill
super + shift + q
	bspc node -c || bspc node -k

# toggle floating
super + shift + space
     bspc node -t tiled || bspc node -t floating

# toggle horizontal/vertical
super + e
    bspc node @parent -R 90

# equalize nodes
super + m
    bspc node @parent -E

# fullscreen
super + shift + f
    bspc node -t \~fullscreen

# toggle between tiled/floating mode
super + shift + t
    ~/.config/sxhkd/toggle_state {floating,tiled}

#
# focus/swap
#

# focus the node in the given direction
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
    ~/.config/sxhkd/move {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f, node -d} '^{1-9,10}'

# focus next/prev desktop
super + Tab
    bspc desktop next.occupied -f

super + shift + Tab
    bspc desktop any.!occupied -f

super + w
    bspc node -f next.local

super + button{4,5}
    bspc desktop -f {next,prev}

#
# move/resize
#

super + control + {h,j,k,l}
    ~/.config/sxhkd/resize {west,south,north,east} 101

#
# gaps
#

# inner
super + alt + {j,h}
    g="$(bspc config -d focused  window_gap)"; [[ $g -gt 0  ]] && bspc config -d focused window_gap $(( $g-10 )) 
super + alt + {k,l}
    g="$(bspc config -d focused  window_gap)"; bspc config -d focused window_gap $(( $g+10 )) 

# reset
super + alt + r
    bspc config -d focused window_gap 20

#
# apps
#

super + y
    firefox

super + Return
    kitty -e tmux -u

super + {u,i,o}
    kitty -e {$FILEMANAGER,$MUSICCLIENT,$EDITOR}

super + {p,less,greater}
    playerctl {toggle,prev,next}

super + control + {less,greater}
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

super + shift + p
    kitty -geometry 40x8+297+1 -e app_menu

super + t
#     bspc config top_padding 0 && bspc config bottom_padding 0 && polybar-msg cmd toggle 
    {polybar-msg cmd hide && bspc config -m focused top_padding 0,polybar-msg cmd show && bspc config -m focused top_padding 50}

super + {p,less,greater}
    playerctl {play-pause,previous,next}

super + b
    feh --bg-fill $(find pictures/wallpapers/ -type f \( -iname '*.jpg' -o -iname '*.png' \) | shuf | head -n1)

super + shift + e
    powermenu

XF86MonBrightnessDown
    lower_backlight

XF86MonBrightnessUp
    raise_backlight

XF86AudioLowerVolume
    lower_vol

XF86AudioRaiseVolume
    raise_vol

XF86AudioMute
    toggle_mute

Print
    scrot '%Y-%m-%d_%H:%M_scrot.png' -e 'mv $f ~/.screens/'

alt + Print
    scrot -s '%Y-%m-%d_%H:%M:%S_scrot.png' -e 'mv $f ~/.screens/'
